# xác định thiết lập gốc
root = true

# Mọi file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_size = 2
indent_style = space
trim_trailing_whitespace = true
max_line_length = 80

# Chỉ áp dụng cho các file với phần mở rộng sau
[*.json]
indent_size = 4
indent_style = space

# Don't wrap lines for Git commit messages
[COMMIT_EDITMSG]
max_line_length = 0
